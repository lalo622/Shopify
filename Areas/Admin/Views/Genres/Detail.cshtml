@using Shopify.Models
@model Genre

@{
    ViewData["Title"] = "Chi tiết thể loại";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <h2>
            <i class="fas fa-info-circle"></i> Chi tiết thể loại
        </h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.GenreId" class="btn btn-warning">
                <i class="fas fa-edit"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-list"></i> Danh sách
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Thông tin thể loại -->
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-guitar"></i> Thông tin thể loại
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Mã số:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary">#@Model.GenreId</span>
                        </dd>

                        <dt class="col-sm-4">Tên:</dt>
                        <dd class="col-sm-8">
                            <strong class="text-primary">@Model.Name</strong>
                        </dd>

                        <dt class="col-sm-4">Mô tả:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                @Model.Description
                            }
                            else
                            {
                                <em class="text-muted">Chưa có mô tả</em>
                            }
                        </dd>

                        <dt class="col-sm-4">Số bài hát:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Songs != null && Model.Songs.Any())
                            {
                                <span class="badge bg-info fs-6">
                                    <i class="fas fa-music"></i> @Model.Songs.Count
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">0</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Actions -->
            <div class="card shadow mt-3">
                <div class="card-header bg-dark text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-cog"></i> Thao tác
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.GenreId" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Chỉnh sửa
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.GenreId" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Xóa thể loại
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại danh sách
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Danh sách bài hát thuộc thể loại -->
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-music"></i> 
                        Bài hát thuộc thể loại (@(Model.Songs?.Count ?? 0))
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Songs != null && Model.Songs.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th width="5%">#</th>
                                        <th width="40%">Tên bài hát</th>
                                        <th width="30%">Nghệ sĩ</th>
                                        <th width="15%">Thời lượng</th>
                                        <th width="10%"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int index = 1;
                                    }
                                    @foreach (var song in Model.Songs.OrderBy(s => s.Title))
                                    {
                                        <tr>
                                            <td>@index</td>
                                            <td>
                                                <i class="fas fa-music text-primary"></i>
                                                <strong>@song.Title</strong>
                                            </td>
                                            <td>
                                                @if (song.Artist != null)
                                                {
                                                    <i class="fas fa-user text-muted"></i>
                                                    @song.Artist.Name
                                                }
                                                else
                                                {
                                                    <em class="text-muted">Chưa có nghệ sĩ</em>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(song.Duration))
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-clock"></i> @song.Duration
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-controller="Songs" asp-action="Details" 
                                                   asp-route-id="@song.SongId" 
                                                   class="btn btn-sm btn-info" title="Xem chi tiết">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle fa-2x mb-2"></i>
                            <h6>Chưa có bài hát nào thuộc thể loại này</h6>
                            <p class="mb-0 text-muted">
                                Thêm bài hát mới và chọn thể loại <strong>@Model.Name</strong>
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>