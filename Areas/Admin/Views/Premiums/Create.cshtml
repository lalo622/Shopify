@model Shopify.Models.Premium

@{
    ViewData["Title"] = "Thêm Gói Premium";
}

<div class="container-fluid px-4">
    <h2 class="mt-4 mb-4">
        <i class="fas fa-crown"></i> Thêm gói Premium mới
    </h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h5><i class="fas fa-exclamation-triangle"></i> Có lỗi xảy ra:</h5>
            <ul class="mb-0">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="Create" method="post" id="createPremiumForm">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">
                                <i class="fas fa-tag"></i> Tên gói <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Name" name="Name" class="form-control"
                                   placeholder="VD: VIP 1 Tháng, Gói Gia Đình..." required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label fw-bold">
                                <i class="fas fa-dollar-sign"></i> Giá (VNĐ) <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Price" name="Price" class="form-control" type="number" step="0.01" required />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DurationDays" class="form-label fw-bold">
                                <i class="fas fa-clock"></i> Thời hạn (ngày) <span class="text-danger">*</span>
                            </label>
                            <input asp-for="DurationDays" name="DurationDays" class="form-control" type="number" required />
                            <span asp-validation-for="DurationDays" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="fas fa-align-left"></i> Mô tả
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                      placeholder="Mô tả chi tiết về các tính năng của gói (không bắt buộc)"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" asp-for="IsActive">
                            <label class="form-check-label" asp-for="IsActive">
                                <i class="fas fa-check-circle"></i> Kích hoạt (Mặc định: Có)
                            </label>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Lưu gói Premium
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}