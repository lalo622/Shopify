@model Shopify.Models.Premium
@{
    ViewData["Title"] = "Chi tiết gói VIP";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>@Model.Name</h2>

<dl class="row">
    <dt class="col-sm-3">Giá:</dt>
    <dd class="col-sm-9">@Model.Price.ToString("N0") VNĐ</dd>

    <dt class="col-sm-3">Thời hạn:</dt>
    <dd class="col-sm-9">@Model.DurationDays ngày</dd>

    <dt class="col-sm-3">Mô tả:</dt>
    <dd class="col-sm-9">@Model.Description</dd>

    <dt class="col-sm-3">Kích hoạt:</dt>
    <dd class="col-sm-9">@(Model.IsActive ? "Có" : "Không")</dd>

    <dt class="col-sm-3">Ngày tạo:</dt>
    <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.PremiumId" class="btn btn-warning">Chỉnh sửa</a>
<a asp-action="Index" class="btn btn-secondary">Trở lại</a>
