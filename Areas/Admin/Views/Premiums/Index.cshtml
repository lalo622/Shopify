@model IEnumerable<Shopify.Models.Premium>


@{
    ViewData["Title"] = "Quản lý Gói Premium";
}

<h2>Quản lý Gói Premium</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<p>
    <a asp-area="Admin" asp-controller="Premiums" asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Tạo Gói Mới
    </a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Tên gói</th>
            <th>Giá</th>
            <th>Thời hạn</th>
            <th>Trạng thái</th>
            <th>Ngày tạo</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@string.Format("{0:N0}", item.Price) VNĐ</td>
                <td>@Html.DisplayFor(modelItem => item.DurationDays) ngày</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Đang hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Đã khóa</span>
                    }
                </td>
                <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-area="Admin" asp-controller="Premiums" asp-action="Edit" asp-route-id="@item.PremiumId"
                           class="btn btn-sm btn-info" title="Sửa">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-area="Admin" asp-controller="Premiums" asp-action="Details" asp-route-id="@item.PremiumId"
                           class="btn btn-sm btn-secondary" title="Chi tiết">
                            <i class="fas fa-info-circle"></i>
                        </a>
                        <a asp-area="Admin" asp-controller="Premiums" asp-action="Delete" asp-route-id="@item.PremiumId"
                           class="btn btn-sm btn-danger" title="Xóa">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>