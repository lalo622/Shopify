@using Shopify.Models
@model Song

@{
    ViewData["Title"] = "Chỉnh sửa bài hát";
}

<div class="container-fluid px-4">
    <h2 class="mt-4 mb-4">Chỉnh sửa bài hát: @Model.Title</h2>

    <!-- HIỂN THỊ THÔNG BÁO THÀNH CÔNG -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- HIỂN THỊ THÔNG BÁO LỖI -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- HIỂN THỊ LỖI TỪ MODELSTATE -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h5><i class="fas fa-exclamation-triangle"></i> Có lỗi xảy ra:</h5>
            <ul class="mb-0">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            <!-- HIỂN THỊ FILE AUDIO HIỆN TẠI -->
            @if (!string.IsNullOrEmpty(Model.AudioUrl))
            {
                <div class="alert alert-info mb-4">
                    <h5><i class="fas fa-headphones"></i> File nhạc hiện tại</h5>
                    <audio controls class="w-100 mt-2">
                        <source src="@Model.AudioUrl" type="audio/mpeg">
                        Trình duyệt không hỗ trợ phát nhạc.
                    </audio>
                    <small class="text-muted d-block mt-2">
                        <i class="fas fa-info-circle"></i> Bạn có thể giữ nguyên file này hoặc tải lên file mới bên dưới
                    </small>
                </div>
            }

            <form asp-area="Admin" asp-controller="Songs" asp-action="Edit" method="post" enctype="multipart/form-data" id="editSongForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="SongId" />
                
                <div class="row">
                    <!-- Tên bài hát -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Title" class="form-label fw-bold">
                            <i class="fas fa-music"></i> Tên bài hát <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Title" class="form-control" placeholder="Nhập tên bài hát" required />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <!-- Thời lượng -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Duration" class="form-label fw-bold">
                            <i class="fas fa-clock"></i> Thời lượng
                        </label>
                        <input asp-for="Duration" id="Duration" class="form-control" 
                               placeholder="Tự động cập nhật nếu chọn file mới" />
                        <small class="form-text text-muted">Thời lượng hiện tại: @(Model.Duration ?? "Chưa có")</small>
                    </div>
                </div>

                <!-- Mô tả -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">
                        <i class="fas fa-align-left"></i> Mô tả
                    </label>
                    <textarea asp-for="Description" class="form-control" rows="3" 
                              placeholder="Nhập mô tả về bài hát (không bắt buộc)"></textarea>
                </div>

                <!-- File nhạc MỚI (tùy chọn) -->
                <div class="mb-3">
                    <label for="audioFile" class="form-label fw-bold">
                        <i class="fas fa-file-audio"></i> Thay đổi file nhạc (tùy chọn)
                    </label>
                    <input type="file" name="audioFile" id="audioFile" class="form-control" 
                           accept=".mp3,.wav,.m4a,.aac,.ogg" />
                    <small class="form-text text-muted">
                        <i class="fas fa-info-circle"></i> Để trống nếu không muốn thay đổi file nhạc. Chấp nhận: MP3, WAV, M4A, AAC, OGG (tối đa 50MB)
                    </small>
                    @if (ViewData.ModelState["audioFile"] != null && ViewData.ModelState["audioFile"].Errors.Count > 0)
                    {
                        <div class="text-danger mt-1">
                            <i class="fas fa-exclamation-circle"></i> @ViewData.ModelState["audioFile"].Errors.First().ErrorMessage
                        </div>
                    }
                </div>

                <div class="row">
                    <!-- Nghệ sĩ -->
                    <div class="col-md-4 mb-3">
                        <label asp-for="ArtistId" class="form-label fw-bold">
                            <i class="fas fa-user"></i> Nghệ sĩ <span class="text-danger">*</span>
                        </label>
                        <select asp-for="ArtistId" class="form-select" required>
                            <option value="">-- Chọn nghệ sĩ --</option>
                            @if (ViewBag.Artists != null && ViewBag.Artists.Count > 0)
                            {
                                foreach (var artist in ViewBag.Artists)
                                {
                                    <option value="@artist.ArtistId" selected="@(artist.ArtistId == Model.ArtistId)">
                                        @artist.Name
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="ArtistId" class="text-danger"></span>
                    </div>

                    <!-- Thể loại -->
                    <div class="col-md-4 mb-3">
                        <label asp-for="GenreId" class="form-label fw-bold">
                            <i class="fas fa-guitar"></i> Thể loại <span class="text-danger">*</span>
                        </label>
                        <select asp-for="GenreId" class="form-select" required>
                            <option value="">-- Chọn thể loại --</option>
                            @if (ViewBag.Genres != null && ViewBag.Genres.Count > 0)
                            {
                                foreach (var genre in ViewBag.Genres)
                                {
                                    <option value="@genre.GenreId" selected="@(genre.GenreId == Model.GenreId)">
                                        @genre.Name
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="GenreId" class="text-danger"></span>
                    </div>

                    <!-- Album (optional) -->
                    <div class="col-md-4 mb-3">
                        <label asp-for="AlbumId" class="form-label fw-bold">
                            <i class="fas fa-compact-disc"></i> Album (tùy chọn)
                        </label>
                        <select asp-for="AlbumId" class="form-select">
                            <option value="">-- Không thuộc album --</option>
                            @if (ViewBag.Albums != null && ViewBag.Albums.Count > 0)
                            {
                                foreach (var album in ViewBag.Albums)
                                {
                                    <option value="@album.AlbumId" selected="@(album.AlbumId == Model.AlbumId)">
                                        @album.Title (@album.Artist?.Name)
                                    </option>
                                }
                            }
                        </select>
                    </div>
                </div>

                <hr class="my-4" />

                <!-- Buttons -->
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Hủy
                    </a>
                    <a asp-action="Details" asp-route-id="@Model.SongId" class="btn btn-info">
                        <i class="fas fa-eye"></i> Xem chi tiết
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <script>
        // Lưu giá trị ban đầu để so sánh
        const originalValues = {
            title: '@Model.Title',
            description: '@(Model.Description ?? "")',
            artistId: '@Model.ArtistId',
            genreId: '@Model.GenreId',
            albumId: '@(Model.AlbumId?.ToString() ?? "")',
            duration: '@(Model.Duration ?? "")'
        };

        let hasFileChange = false;

        // Script xử lý file audio
        document.getElementById('audioFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            const durationInput = document.getElementById('Duration');
            
            if (file) {
                hasFileChange = true;
                
                // Kiểm tra kích thước file
                const maxSize = 50 * 1024 * 1024; // 50MB
                if (file.size > maxSize) {
                    alert('⚠️ File quá lớn! Kích thước tối đa là 50MB.');
                    e.target.value = '';
                    hasFileChange = false;
                    return;
                }
                
                // Kiểm tra định dạng file
                const allowedExtensions = ['.mp3', '.wav', '.m4a', '.aac', '.ogg'];
                const fileExtension = file.name.toLowerCase().substring(file.name.lastIndexOf('.'));
                
                if (!allowedExtensions.includes(fileExtension)) {
                    alert('⚠️ Chỉ chấp nhận file nhạc: MP3, WAV, M4A, AAC, OGG');
                    e.target.value = '';
                    hasFileChange = false;
                    return;
                }
                
                // Lấy thời lượng từ file
                getAudioDuration(file).then(duration => {
                    if (duration && duration > 0) {
                        const minutes = Math.floor(duration / 60);
                        const seconds = Math.floor(duration % 60);
                        const hours = Math.floor(minutes / 60);
                        const remainingMinutes = minutes % 60;
                        
                        const formattedDuration = 
                            hours.toString().padStart(2, '0') + ':' +
                            remainingMinutes.toString().padStart(2, '0') + ':' +
                            seconds.toString().padStart(2, '0');
                        
                        durationInput.value = formattedDuration;
                        console.log('✅ Thời lượng mới:', formattedDuration);
                    }
                }).catch(error => {
                    console.error('❌ Lỗi khi lấy thời lượng:', error);
                    alert('⚠️ Không thể đọc thời lượng file. Giữ nguyên thời lượng cũ.');
                });
            } else {
                hasFileChange = false;
            }
        });

        // Hàm lấy thời lượng audio
        function getAudioDuration(file) {
            return new Promise((resolve, reject) => {
                const audio = new Audio();
                const objectUrl = URL.createObjectURL(file);
                
                audio.src = objectUrl;
                
                audio.addEventListener('loadedmetadata', function() {
                    URL.revokeObjectURL(objectUrl);
                    resolve(audio.duration);
                });
                
                audio.addEventListener('error', function(e) {
                    URL.revokeObjectURL(objectUrl);
                    reject(e);
                });
                
                // Timeout sau 10 giây
                setTimeout(() => {
                    URL.revokeObjectURL(objectUrl);
                    reject(new Error('Timeout khi đọc file'));
                }, 10000);
            });
        }

        // Kiểm tra thay đổi trước khi submit
        document.getElementById('editSongForm').addEventListener('submit', function(e) {
            const currentValues = {
                title: document.querySelector('[name="Title"]').value,
                description: document.querySelector('[name="Description"]').value,
                artistId: document.querySelector('[name="ArtistId"]').value,
                genreId: document.querySelector('[name="GenreId"]').value,
                albumId: document.querySelector('[name="AlbumId"]').value,
                duration: document.querySelector('[name="Duration"]').value
            };

            // So sánh các giá trị
            const hasChanges = 
                currentValues.title !== originalValues.title ||
                currentValues.description !== originalValues.description ||
                currentValues.artistId !== originalValues.artistId ||
                currentValues.genreId !== originalValues.genreId ||
                currentValues.albumId !== originalValues.albumId ||
                currentValues.duration !== originalValues.duration ||
                hasFileChange;

            if (!hasChanges) {
                e.preventDefault();
                alert('ℹ️ Không có thay đổi nào được thực hiện!');
                window.location.href = '@Url.Action("Index", "Songs", new { area = "Admin" })';
                return false;
            }
        });

        // Auto dismiss alerts sau 5 giây
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}