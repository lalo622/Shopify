@model IEnumerable<Shopify.Models.Album>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">Thêm Album mới</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Ảnh bìa</th>
                    <th>Tiêu đề</th>
                    <th>Nghệ sĩ</th>
                    <th>Ngày phát hành</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(item.CoverImageUrl))
                            {
                                <img src="@item.CoverImageUrl" alt="Cover" style="width: 60px; height: 60px; object-fit: cover;" />
                            }
                            else
                            {
                                <div style="width: 60px; height: 60px; background: #f8f9fa; display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-image text-muted"></i>
                                </div>
                            }
                        </td>
                        <td>@item.Title</td>
                        <td>@item.Artist?.Name</td>
                        <td>@item.ReleaseDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@item.AlbumId" class="btn btn-info btn-sm">Chi tiết</a>
                                <a asp-action="Edit" asp-route-id="@item.AlbumId" class="btn btn-warning btn-sm">Sửa</a>
                                <a asp-action="Delete" asp-route-id="@item.AlbumId" class="btn btn-danger btn-sm">Xóa</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>