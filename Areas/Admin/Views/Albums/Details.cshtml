@model Shopify.Models.Album

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Ảnh bìa</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
            {
                <img src="@Model.CoverImageUrl" alt="Cover" style="max-width: 300px; max-height: 300px;" />
            }
            else
            {
                <span>Không có ảnh</span>
            }
        </dd>

        <dt class="col-sm-2">Tiêu đề</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Nghệ sĩ</dt>
        <dd class="col-sm-10">@Model.Artist?.Name</dd>

        <dt class="col-sm-2">Ngày phát hành</dt>
        <dd class="col-sm-10">@Model.ReleaseDate.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Bài hát</dt>
        <dd class="col-sm-10">
            @if (Model.Songs?.Any() == true)
            {
                <ul>
                    @foreach (var song in Model.Songs)
                    {
                        <li>@song.Title</li>
                    }
                </ul>
            }
            else
            {
                <span>Chưa có bài hát</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.AlbumId" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>