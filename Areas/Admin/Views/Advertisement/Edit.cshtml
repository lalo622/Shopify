@model Shopify.Models.Advertisement

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Chỉnh sửa Quảng cáo";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-edit me-2"></i>Chỉnh sửa Quảng cáo Phát nhạc
                    </h4>
                </div>

                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @using (Html.BeginForm("Edit", "Advertisement", FormMethod.Post, new { enctype = "multipart/form-data", area = "Admin" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.AdvertisementId)
                        @Html.HiddenFor(m => m.PosterUrl) @* Giữ lại Poster cũ *@
                        @Html.HiddenFor(m => m.AudioUrl) @* Giữ lại Audio cũ *@
                        @Html.HiddenFor(m => m.CreatedAt) @* Giữ lại ngày tạo *@

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Title, "Tiêu đề *", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Nhập tiêu đề quảng cáo" })
                            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Description, "Mô tả", new { @class = "form-label" })
                            @Html.TextAreaFor(m => m.Description, 4, 50, new { @class = "form-control", placeholder = "Nhập mô tả..." })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Duration, "Thời lượng (vd: 30s)", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Duration, new { @class = "form-control", placeholder = "Nhập thời lượng quảng cáo" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.AdvertiserLink, "Liên kết nhà quảng cáo", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.AdvertiserLink, new { @class = "form-control", placeholder = "Ví dụ: https://example.com" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Ảnh Poster (Bìa quảng cáo)</label>
                            @if (!string.IsNullOrEmpty(Model.PosterUrl))
                            {
                                <div id="currentImagePreview" class="mb-2 text-center">
                                    <img src="@Url.Content(Model.PosterUrl)" alt="Ảnh hiện tại"
                                         style="max-width:200px;border-radius:10px;box-shadow:0 2px 6px rgba(0,0,0,0.2);" />
                                </div>
                            }
                            <input type="file" name="imageFile" class="form-control" accept="image/*" onchange="previewNewImage(event)" />
                            <small class="form-text text-muted">Chọn ảnh mới nếu muốn thay đổi.</small>
                            <div id="newImagePreview" class="mt-3 text-center"></div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">File Âm thanh</label>
                            @if (!string.IsNullOrEmpty(Model.AudioUrl))
                            {
                                <div class="mb-2">
                                    <audio controls>
                                        <source src="@Url.Content(Model.AudioUrl)" type="audio/mpeg">
                                        Trình duyệt của bạn không hỗ trợ element audio.
                                    </audio>
                                </div>
                            }
                            <input type="file" name="audioFile" class="form-control" accept="audio/*" />
                            <small class="form-text text-muted">Chọn file âm thanh mới nếu muốn thay đổi.</small>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.IsActive, "Trạng thái", new { @class = "form-label" })
                            @Html.DropDownListFor(m => m.IsActive, new List<SelectListItem> {
                            new SelectListItem { Text = "Hiển thị", Value = "true", Selected = Model.IsActive },
                                                new SelectListItem { Text = "Ẩn", Value = "false", Selected = !Model.IsActive }
                                                }, new { @class = "form-select" })
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Lưu thay đổi
                        </button>
                    </div>
                                        }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Xem trước ảnh mới
        function previewNewImage(event) {
            const file = event.target.files[0];
            const newImagePreviewDiv = document.getElementById('newImagePreview');
            newImagePreviewDiv.innerHTML = ''; // Xóa ảnh cũ

            // Ẩn ảnh hiện tại khi chọn ảnh mới
            const currentImagePreviewDiv = document.getElementById('currentImagePreview');
            if (currentImagePreviewDiv) {
                currentImagePreviewDiv.style.display = 'none';
            }

            if (file) {
                const reader = new FileReader();
                reader.onload = e => {
                    newImagePreviewDiv.innerHTML =
                        `<img src="${e.target.result}" alt="Preview"
                            style="max-width:200px;border-radius:10px;box-shadow:0 2px 6px rgba(0,0,0,0.2);" />`;
                };
                reader.readAsDataURL(file);
            }
        }

        // Ẩn thông báo sau 5 giây
        setTimeout(() => $('.alert').fadeOut('slow'), 5000);
    </script>
}