@model Shopify.Models.Advertisement

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Thêm Quảng cáo mới";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus me-2"></i>Thêm Quảng cáo mới
                    </h4>
                </div>

                <div class="card-body">
                    @* ✅ Hiển thị thông báo *@
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @* ✅ Form thêm quảng cáo *@
                    @using (Html.BeginForm("Create", "Advertisement", FormMethod.Post, new { enctype = "multipart/form-data", area = "Admin" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Title, "Tiêu đề *", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Nhập tiêu đề quảng cáo" })
                            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Description, "Mô tả", new { @class = "form-label" })
                            @Html.TextAreaFor(m => m.Description, 4, 50, new { @class = "form-control", placeholder = "Nhập mô tả..." })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Link, "Liên kết", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Link, new { @class = "form-control", placeholder = "Ví dụ: https://example.com" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Ảnh quảng cáo</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*" onchange="previewImage(event)" />
                            <small class="form-text text-muted">Hỗ trợ JPG, PNG hoặc GIF</small>
                            <div id="imagePreview" class="mt-3 text-center"></div>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.IsActive, "Trạng thái", new { @class = "form-label" })
                            @Html.DropDownListFor(m => m.IsActive, new List<SelectListItem> {
                            new SelectListItem { Text = "Hiển thị", Value = "true" },
                                                new SelectListItem { Text = "Ẩn", Value = "false" }
                                                }, new { @class = "form-select" })
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Lưu quảng cáo
                        </button>
                    </div>
                                        }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Xem trước ảnh
        function previewImage(event) {
            const file = event.target.files[0];
            const imagePreviewDiv = document.getElementById('imagePreview');
            imagePreviewDiv.innerHTML = ''; // Xóa ảnh cũ
            if (file) {
                const reader = new FileReader();
                reader.onload = e => {
                    imagePreviewDiv.innerHTML =
                        `<img src="${e.target.result}" alt="Preview"
                            style="max-width:200px;border-radius:10px;box-shadow:0 2px 6px rgba(0,0,0,0.2);" />`;
                };
                reader.readAsDataURL(file);
            }
        }

        // Ẩn thông báo sau 5 giây
        setTimeout(() => $('.alert').fadeOut('slow'), 5000);
    </script>
}