@model Shopify.Models.Artist
@using Microsoft.AspNetCore.Identity
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = Model.Name;
    var user = HttpContextAccessor.HttpContext.User;
    bool isVipUser = user.Identity.IsAuthenticated 
                     && user.Claims.Any(c => c.Type == "UserId") 
                     && bool.TryParse(user.FindFirst("IsVip")?.Value, out var vip) && vip;
}

<style>
    .artist-hero {
        position: relative;
        height: 400px;
        background: linear-gradient(180deg, rgba(18,18,18,0) 0%, #121212 100%);
        border-radius: 12px;
        margin-bottom: 40px;
        display: flex;
        align-items: flex-end;
        padding: 40px;
        overflow: hidden;
    }
    .artist-hero-bg {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 0;
    }

    .artist-hero-bg img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        object-position: center center;
    }

    .artist-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(180deg, rgba(18,18,18,0.3) 0%, rgba(18,18,18,0.95) 100%);
        z-index: 1;
    }

    .artist-hero-content {
        position: relative;
        z-index: 2;
    }

    .artist-verified {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: rgba(29, 185, 84, 0.15);
        color: #1db954;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        margin-bottom: 12px;
    }

    .artist-name {
        font-size: 4rem;
        font-weight: 900;
        margin: 0;
        text-shadow: 0 4px 12px rgba(0,0,0,0.5);
    }

    .artist-stats {
        display: flex;
        gap: 24px;
        margin-top: 16px;
        font-size: 0.95rem;
        color: #b3b3b3;
    }

    .artist-stat-item {
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .artist-description {
        background: #181818;
        border-radius: 12px;
        padding: 24px;
        margin-bottom: 40px;
        color: #b3b3b3;
        line-height: 1.6;
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 24px;
        color: #fff;
    }

    .songs-table {
        background: transparent;
    }

    .song-row {
        display: grid;
        grid-template-columns: 50px 1fr 250px 100px 60px;
        align-items: center;
        gap: 16px;
        padding: 12px 16px;
        border-radius: 6px;
        transition: all 0.2s ease;
        cursor: pointer;
        position: relative;
    }

    .song-row:hover {
        background: #282828;
    }

    .song-row.playing {
        background: rgba(29, 185, 84, 0.1);
    }

    .song-number {
        text-align: center;
        color: #b3b3b3;
        font-weight: 500;
    }

    .song-row:hover .song-number {
        display: none;
    }

    .play-icon {
        display: none;
        justify-content: center;
        align-items: center;
        color: #fff;
        font-size: 1.2rem;
    }

    .song-row:hover .play-icon {
        display: flex;
    }

    .song-info {
        display: flex;
        align-items: center;
        gap: 12px;
        min-width: 0;
    }

    .song-image {
        width: 48px;
        height: 48px;
        border-radius: 4px;
        object-fit: cover;
        background: #282828;
        flex-shrink: 0;
    }

    .song-details {
        min-width: 0;
        flex: 1;
    }

    .song-title {
        font-size: 1rem;
        font-weight: 500;
        color: #fff;
        margin: 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .vip-badge {
        display: inline-flex;
        background: #ffd700;
        color: #000;
        font-size: 0.65rem;
        font-weight: 900;
        padding: 2px 6px;
        border-radius: 4px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .song-album {
        font-size: 0.85rem;
        color: #b3b3b3;
        margin: 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .song-album-name {
        color: #b3b3b3;
        font-size: 0.9rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .song-plays {
        color: #b3b3b3;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .song-duration {
        color: #b3b3b3;
        font-size: 0.9rem;
        text-align: right;
    }

    .album-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 20px;
        margin-top: 24px;
    }

    .album-card {
        background: #181818;
        border-radius: 8px;
        padding: 16px;
        transition: all 0.2s ease;
        cursor: pointer;
    }

    .album-card:hover {
        background: #282828;
        transform: translateY(-4px);
    }

    .album-cover {
        width: 100%;
        aspect-ratio: 1;
        border-radius: 6px;
        object-fit: cover;
        background: #282828;
        margin-bottom: 12px;
    }

    .album-title {
        font-size: 1rem;
        font-weight: 600;
        color: #fff;
        margin: 0 0 4px 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .album-year {
        font-size: 0.85rem;
        color: #b3b3b3;
    }

    .locked-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.7);
        display: none;
        align-items: center;
        justify-content: center;
        border-radius: 6px;
    }

    .song-row.locked:hover .locked-overlay {
        display: flex;
    }

    .lock-message {
        background: rgba(255, 215, 0, 0.2);
        color: #ffd700;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    @@media (max-width: 768px) {
        .artist-name {
            font-size: 2.5rem;
        }

        .song-row {
            grid-template-columns: 40px 1fr 80px;
        }

        .song-album-name,
        .song-plays {
            display: none;
        }
    }
</style>

<div class="artist-container">
    <!-- Hero Section -->
    <div class="artist-hero">
    <div class="artist-hero-bg">
        <img src="@(Model.ImageUrl ?? "/images/default-artist.png")" 
             alt="@Model.Name"
             onerror="this.src='/images/default-artist.png'">
    </div>
        <div class="artist-hero-content">
            <div class="artist-verified">
                <i class="bi bi-patch-check-fill"></i>
                Nghệ sĩ được xác minh
            </div>
            <h1 class="artist-name">@Model.Name</h1>
            <div class="artist-stats">
                @if (Model.Songs != null)
                {
                    <div class="artist-stat-item">
                        <i class="bi bi-music-note-beamed"></i>
                        <span>@Model.Songs.Count bài hát</span>
                    </div>
                }
                @if (Model.Albums != null)
                {
                    <div class="artist-stat-item">
                        <i class="bi bi-disc"></i>
                        <span>@Model.Albums.Count album</span>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.QuocGia))
                {
                    <div class="artist-stat-item">
                        <i class="bi bi-geo-alt"></i>
                        <span>@Model.QuocGia</span>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Description -->
    @if (!string.IsNullOrEmpty(Model.MoTa))
    {
        <div class="artist-description">
            <p style="margin: 0;">@Model.MoTa</p>
        </div>
    }

    <!-- Popular Songs -->
    <section style="margin-bottom: 60px;">
        <h2 class="section-title">Phổ biến</h2>
        
        <div class="songs-table">
            @if (Model.Songs != null && Model.Songs.Any())
            {
                var sortedSongs = Model.Songs.OrderByDescending(s => s.PlayCount).Take(10);
                int index = 1;
                
                foreach (var song in sortedSongs)
                {
                    var isLocked = song.IsVip && !isVipUser;
                    
                    <div class="song-row @(isLocked ? "locked" : "")"
                         data-song-id="@song.SongId"
                         data-title="@song.Title"
                         data-artist="@song.Artist?.Name"
                         data-audio="@song.AudioUrl"
                         data-image="@(song.ImageUrl ?? song.Album?.CoverImageUrl ?? "/images/default-song.png")"
                         data-isvip="@song.IsVip.ToString().ToLower()">
                        
                        <div style="position: relative;">
                            <div class="song-number">@index</div>
                            <div class="play-icon">
                                <i class="bi bi-play-fill"></i>
                            </div>
                        </div>
                        
                        <div class="song-info">
                            <img src="@(song.ImageUrl ?? song.Album?.CoverImageUrl ?? "/images/default-song.png")" 
                                 alt="@song.Title"
                                 class="song-image"
                                 onerror="this.src='/images/default-song.png'">
                            <div class="song-details">
                                <div class="song-title">
                                    @song.Title
                                    @if (song.IsVip)
                                    {
                                        <span class="vip-badge">VIP</span>
                                    }
                                </div>
                                <p class="song-album">@(song.Album?.Title ?? "Single")</p>
                            </div>
                        </div>
                        <div class="song-plays">
                            <i class="bi bi-bar-chart-fill" style="font-size: 0.8rem;"></i>
                            @song.PlayCount.ToString("N0")
                        </div>
                        
                        <div class="song-duration">
                            @(song.Duration ?? "--")
                        </div>

                        @if (isLocked)
                        {
                            <div class="locked-overlay">
                                <div class="lock-message">
                                    <i class="bi bi-lock-fill"></i>
                                    VIP Only
                                </div>
                            </div>
                        }
                    </div>
                    
                    index++;
                }
            }
            else
            {
                <p style="color: #b3b3b3; text-align: center; padding: 40px 0;">
                    Chưa có bài hát nào.
                </p>
            }
        </div>
    </section>

    <!-- Albums -->
    @if (Model.Albums != null && Model.Albums.Any())
    {
        <section>
            <h2 class="section-title">Album & Single</h2>
            <div class="album-grid">
                @foreach (var album in Model.Albums.Take(6))
                {
                    <div class="album-card">
                        <img src="@(album.CoverImageUrl ?? "/images/default-album.png")" 
                             alt="@album.Title"
                             class="album-cover"
                             onerror="this.src='/images/default-album.png'">
                        <h4 class="album-title">@album.Title</h4>
                    </div>
                }
            </div>
        </section>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const songRows = document.querySelectorAll('.song-row');
            const isVipUser = @isVipUser.ToString().ToLower();

            songRows.forEach(row => {
                row.addEventListener('click', (e) => {
                    e.preventDefault();
                    
                    const isVipSong = row.dataset.isvip === 'true';
                    
                    // Kiểm tra nếu bài VIP và user không phải VIP
                    if (isVipSong && !isVipUser) {
                        alert('⭐ Bài hát này chỉ dành cho thành viên VIP\n\nNâng cấp Premium để thưởng thức toàn bộ thư viện!');
                        return;
                    }

                    const song = {
                        id: row.dataset.songId,
                        title: row.dataset.title,
                        artist: row.dataset.artist,
                        audio: row.dataset.audio,
                        image: row.dataset.image,
                        isVip: isVipSong
                    };

                    // Đánh dấu bài đang phát
                    document.querySelectorAll('.song-row').forEach(r => r.classList.remove('playing'));
                    row.classList.add('playing');

                    // Phát nhạc
                    if (window.playNow) {
                        window.playNow(song);
                    }
                });
            });
        });
    </script>
}