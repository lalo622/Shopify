@model Shopify.Controllers.AccountController.ForgotPasswordViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Quên mật khẩu";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Shopify</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <style>
        /* CSS được cung cấp */
        body {
            background: #0e0e0e;
            color: white;
            font-family: 'Inter', sans-serif;
        }

        .main-content-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .form-container {
            width: 400px;
        }

        input, button {
            width: 100%;
            margin-top: 10px;
            padding: 10px;
            border-radius: 6px;
            border: none;
        }

        input {
            background: #1a1a1a;
            color: white;
        }

        button {
            background: #63d7d4;
            color: black;
            font-weight: 600;
        }

        /* Message Styles */
        .message-box {
            margin-top: 10px;
            padding: 10px;
            border-radius: 6px;
        }

        .error-msg {
            background-color: #f8d7da;
            color: #721c24;
        }

        .success-msg {
            background-color: #d4edda;
            color: #155724;
        }
    </style>
</head>
<body>
    <div class="main-content-wrapper">
        <div class="form-container">
            <h2>Đặt lại Mật khẩu</h2>

            @* Hiển thị thông báo chung *@
            @if (ViewBag.Error != null)
            {
                <div class="message-box error-msg">@ViewBag.Error</div>
            }
            @if (ViewBag.Success != null)
            {
                <div class="message-box success-msg">@ViewBag.Success</div>
            }
            @if (Html.ViewData.ModelState.Any(x => x.Value.Errors.Any()))
            {
                <div class="message-box error-msg">
                    @Html.ValidationSummary(false, "Vui lòng sửa các lỗi sau:")
                </div>
            }

            @* --- FORM BƯỚC 1: NHẬP EMAIL ĐỂ GỬI OTP --- *@
            @if (Model.OtpStatus != "OTP_SENT")
            {
                <form asp-action="ForgotPassword" method="post">
                    <h3>Bước 1: Nhập Email</h3>

                    <input asp-for="Email" placeholder="Email của bạn" required />
                    <span asp-validation-for="Email" style="color:red"></span>

                    <button type="submit">Gửi Mã Đặt lại (OTP)</button>

                    @* Trường ẩn để truyền trạng thái *@
                    <input type="hidden" asp-for="OtpStatus" />
                    <input type="hidden" asp-for="Otp" />
                    <input type="hidden" asp-for="NewPassword" />
                    <input type="hidden" asp-for="ConfirmPassword" />
                </form>
            }

            @* --- FORM BƯỚC 2: XÁC MINH OTP VÀ ĐẶT LẠI MẬT KHẨU --- *@
            @if (Model.OtpStatus == "OTP_SENT")
            {
                <form asp-action="ResetPassword" method="post">
                    <h3>Bước 2: Xác minh & Đặt mật khẩu mới</h3>

                    @* Trường ẩn để GIỮ EMAIL VÀ TRẠNG THÁI *@
                    <input type="hidden" asp-for="Email" />
                    <input type="hidden" asp-for="OtpStatus" />

                    <input asp-for="Otp" placeholder="Mã OTP (6 số)" maxlength="6" required />
                    <span asp-validation-for="Otp" style="color:red"></span>

                    <input asp-for="NewPassword" type="password" placeholder="Mật khẩu mới" required />
                    <span asp-validation-for="NewPassword" style="color:red"></span>

                    <input asp-for="ConfirmPassword" type="password" placeholder="Xác nhận mật khẩu mới" required />
                    <span asp-validation-for="ConfirmPassword" style="color:red"></span>

                    <button type="submit">Đặt lại Mật khẩu</button>
                    <p style="margin-top: 15px;">Bạn có thể <a href="/Account/ForgotPassword">yêu cầu gửi lại OTP</a> nếu cần.</p>
                </form>
            }

            <p style="margin-top: 20px;">Quay lại <a href="/Account/Login">Đăng nhập</a> | <a href="/Account/Register">Đăng ký</a></p>
        </div>
    </div>
</body>
</html>